@using MyBlog.Entities.UIViewModel
@model LoginViewModel

@{
    ViewBag.Title = "Login";
}


<div class="offset-4">

    @Html.ValidationSummary()

    @using (Html.BeginForm())
    {
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-5">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Login Page</h3>
                        </div>
                        <div class="panel-body">
                            <form accept-charset="UTF-8" role="form">
                                <fieldset>
                                    <div class="form-group">
                                        @Html.TextBoxFor(x=>x.Username, new {@class = "form-control", placeholder="Your Username" })
                            
                                    </div>
                                    <div class="form-group">

                                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Your Email", type="password" })
                          
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                                        </label>
                                    </div>
                                    <button class="btn btn-lg btn-success btn-block" type="submit">Login</button>
                          
                                </fieldset>
                            </form>
                            <hr />
                            <center><h4>OR</h4></center>
                            <input class="btn btn-lg btn-facebook btn-block" type="submit" value="Login via facebook">
                        </div>
                    </div>
                </div>
            </div>
        </div>


    }


</div>

